# Build stage
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Serve with Caddy inside container for local dev/proxy needs (optional),
# but in production we place a global Caddy reverse proxy. We'll still expose 5173 for compose networking.
FROM caddy:2-alpine AS runtime
COPY --from=build /app/dist /usr/share/caddy
EXPOSE 5173
# Note: This Caddy serves on :80 by default; the outer caddy service handles TLS and routing.
